{
  "extends": "@foxglove/tsconfig/node.json",
  "include": ["./**/*"],
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "..",
    "outDir": "./dist/esm",
    "target": "es2022",
    "lib": ["es2022", "dom"],

    // required for tsconfig-paths https://github.com/dividab/tsconfig-paths/issues/143
    "baseUrl": "."
  },
  "references": [{ "path": "../core" }],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
