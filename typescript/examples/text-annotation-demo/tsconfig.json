{
  "extends": "@foxglove/tsconfig/base",
  "include": ["./**/*"],
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "../..",
    "outDir": "./dist/esm",
    "lib": ["es2020", "dom"],
    "paths": {
      "@mcap/core": ["../../core/src"],
      "@mcap/support": ["../../support/src"],
      "@mcap/nodejs": ["../../nodejs/src"]
    },

    // required for tsconfig-paths https://github.com/dividab/tsconfig-paths/issues/143
    "baseUrl": "."
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
